<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/lienzo_inicio"
    tools:context=".InicioFragment">


    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:alignmentMode="alignMargins"
        android:layout_marginTop="100dp"
        android:columnOrderPreserved="false"
        android:columnCount="2"
        android:rowCount="3" >

        <androidx.cardview.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card_view_anadir"
            android:layout_gravity="center"
            android:layout_width="180dp"
            android:layout_height="180dp"
            card_view:cardCornerRadius="12dp"
            android:layout_row="0"
            android:layout_column="0"
            card_view:cardElevation="6dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            card_view:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center_horizontal"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/anadir"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:textSize="18dp"
                android:gravity="center_horizontal"
                android:text="Añadir Comunicación"
                android:textColor="@color/black"/>

        </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card_view_enviadas"
            android:layout_gravity="center"
            android:layout_width="180dp"
            android:layout_height="180dp"
            card_view:cardCornerRadius="12dp"
            android:layout_row="0"
            android:layout_column="1"
            card_view:cardElevation="6dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            card_view:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|center_horizontal"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/leer_comunicaciones"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:textSize="18dp"
                    android:gravity="center_horizontal"
                    android:text="Mis Comunicaciones"
                    android:textColor="@color/black"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card_view_perfil"
            android:layout_gravity="center"
            android:layout_width="180dp"
            android:layout_height="180dp"
            card_view:cardCornerRadius="12dp"
            android:layout_row="1"
            android:layout_column="0"
            card_view:cardElevation="6dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            card_view:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|center_horizontal"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/user"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:textSize="18dp"
                    android:gravity="center_horizontal"
                    android:text="Perfil"
                    android:textColor="@color/black"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card_view_alertas"
            android:layout_gravity="center"
            android:layout_width="180dp"
            android:layout_height="180dp"
            card_view:cardCornerRadius="12dp"
            android:layout_row="1"
            android:layout_column="1"
            card_view:cardElevation="6dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            card_view:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|center_horizontal"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/alertas"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:textSize="18dp"
                    android:gravity="center_horizontal"
                    android:text="Alertas"
                    android:textColor="@color/black"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card_view_noticias"
            android:layout_gravity="center"
            android:layout_width="180dp"
            android:layout_height="180dp"
            card_view:cardCornerRadius="12dp"
            android:layout_row="2"
            android:layout_column="0"
            card_view:cardElevation="6dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            card_view:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|center_horizontal"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/noticias"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:textSize="18dp"
                    android:gravity="center_horizontal"
                    android:text="Noticias"
                    android:textColor="@color/black"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card_view_ajustes"
            android:layout_gravity="center"
            android:layout_width="180dp"
            android:layout_height="180dp"
            card_view:cardCornerRadius="12dp"
            android:layout_row="2"
            android:layout_column="1"
            card_view:cardElevation="6dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            card_view:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|center_horizontal"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/settings"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:textSize="18dp"
                    android:gravity="center_horizontal"
                    android:text="Ajustes"
                    android:textColor="@color/black"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>


    </GridLayout>


</FrameLayout>